@inherits LayoutComponentBase

<FluentToastProvider />
<FluentDialogProvider />
<FluentTooltipProvider />
<FluentMessageBarProvider />
<FluentMenuProvider />

<PageTitle>InovaROI</PageTitle>

<FluentLayout>
    <FluentHeader>
        InovaROI
    </FluentHeader>

    <FluentStack Orientation="Microsoft.FluentUI.AspNetCore.Components.Orientation.Horizontal">
        <FluentNavMenu Width="250">
            <FluentNavLink Match="NavLinkMatch.All"
                           Tooltip="Home"
                           Href="/"                           
                           Icon="@(new Icons.Regular.Size20.Home())">Home</FluentNavLink>

            <FluentNavLink Match="NavLinkMatch.Prefix"
                           Href="/dashboard"
                           Tooltip="Dashboard"
                           Icon="@(new Icons.Regular.Size20.DataTrending())">Dashboard</FluentNavLink>

            <FluentNavLink Match="NavLinkMatch.Prefix"
                           Href="/calculator"
                           Tooltip="Calculadora"
                           Icon="@(new Icons.Regular.Size20.Calculator())">Calculadora</FluentNavLink>

            <FluentNavLink Match="NavLinkMatch.Prefix"
                           Href="/report"
                           Tooltip="Relatório"
                           Icon="@(new Icons.Regular.Size20.DocumentBulletList())">Relatório</FluentNavLink>

            <FluentNavLink Match="NavLinkMatch.Prefix"
                           Href="/info"
                           Tooltip="Sobre"
                           Icon="@(new Icons.Regular.Size20.Info())">Sobre</FluentNavLink>
        </FluentNavMenu>

        <FluentBodyContent>
            <div class="content">
                @Body
            </div>
        </FluentBodyContent>
    </FluentStack>

    <FluentFooter>
        <span>&copy; 2025 - Criado por Adriano Godoy e Danillo Silva.</span>
    </FluentFooter>
</FluentLayout>