@page "/"
@using microsoft_hackathon_roi_calculator.Web.Pages.Charts
@using microsoft_hackathon_roi_calculator.Web.Pages.Components
@inject NavigationManager Navigation

<FluentLayout>
    <!-- Seção Hero -->
    <FluentCard Style="margin: 20px; padding: 20px; text-align: center;">
        <FluentLabel Typo="Typography.H1">Soluções Inteligentes para Retorno Máximo</FluentLabel>
        <FluentLabel Typo="Typography.Subject">Calcule o ROI das suas iniciativas de mudança com IA preditiva e prepare suas equipes para o sucesso.</FluentLabel>
        <AreaROI></AreaROI>
        <FluentStack HorizontalAlignment="HorizontalAlignment.Center" Style="margin-top: 60px;">
            <FluentButton Appearance="Appearance.Accent" @onclick="StartNow">Experimente a Calculadora de ROI</FluentButton>
            <FluentButton Appearance="Appearance.Outline" @onclick="LearnMore">Saiba Mais</FluentButton>
        </FluentStack>
    </FluentCard>

    <!-- Benefícios -->
    <FluentCard Style="margin: 20px; padding: 20px;">
        <FluentLabel Typo="Typography.H2">Por que Escolher o InovaROI?</FluentLabel>
        <FluentGrid Justify="Microsoft.FluentUI.AspNetCore.Components.JustifyContent.SpaceAround">
            <FluentGridItem xs="12" sm="6" md="3">
                <FluentIcon Value="@(new Icons.Regular.Size24.BrainCircuit())" />
                <FluentLabel>Insights Preditivos</FluentLabel>
                <p>Antecipe riscos e maximize retornos com IA avançada.</p>
            </FluentGridItem>
            <FluentGridItem xs="12" sm="6" md="3">
                <FluentIcon Value="@(new Icons.Regular.Size24.Lightbulb())" />
                <FluentLabel>Decisões Inteligentes</FluentLabel>
                <p>Recomendações práticas para o sucesso da transformação.</p>
            </FluentGridItem>
            <FluentGridItem xs="12" sm="6" md="3">
                <FluentIcon Value="@(new Icons.Regular.Size24.PeopleTeam())" />
                <FluentLabel>Produtividade Ampliada</FluentLabel>
                <p>Reduza desperdícios e engaje suas equipes.</p>
            </FluentGridItem>
            <FluentGridItem xs="12" sm="6" md="3">
                <FluentIcon Value="@(new Icons.Regular.Size24.Rocket())" />
                <FluentLabel>Escalabilidade</FluentLabel>
                <p>Uma solução que cresce com sua empresa.</p>
            </FluentGridItem>
        </FluentGrid>
    </FluentCard>

    <!-- Estatística -->
    <FluentCard Style="margin: 20px; padding: 20px; background-color: #f0f0f0; text-align: center;">
        <FluentLabel Typo="Typography.H2">Impacto Real</FluentLabel>
        <FluentLabel Typo="Typography.Body">"70% das transformações falham. Estamos aqui para mudar isso."</FluentLabel>
    </FluentCard>

    <!-- Tecnologia -->
    <FluentCard Style="margin: 20px; padding: 20px; text-align: center;">
        <FluentLabel Typo="Typography.H2">Construído com o Melhor da Tecnologia</FluentLabel>
        <FluentStack HorizontalAlignment="HorizontalAlignment.Center">
            <img src="https://logos-world.net/wp-content/uploads/2021/03/Azure-Logo-2020-present.png" alt="Azure" style="height: 50px; margin: 10px;" />
            <img src="https://logowik.com/content/uploads/images/azure-machine-learning-service1395.jpg" alt="Azure ML" style="height: 50px; margin: 10px;" />
            <img src="https://logos-world.net/wp-content/uploads/2023/02/ChatGPT-Logo.png" alt="OpenAI" style="height: 50px; margin: 10px;" />
            <img src="https://logos-world.net/wp-content/uploads/2022/01/NET-Framework-Logo.png" alt=".NET" style="height: 50px; margin: 10px;" />
        </FluentStack>
    </FluentCard>

    <!-- CTA Final -->
    <FluentCard Style="margin: 20px; padding: 20px; background-color: #0078d4; color: white; text-align: center;">
        <FluentLabel Typo="Typography.H2">Pronto para Transformar Sua Empresa?</FluentLabel>
        <FluentLabel>Comece hoje mesmo e veja como a IA pode impulsionar seus projetos.</FluentLabel>
        <FluentButton Appearance="Appearance.Accent" @onclick="StartNow">Começar Agora</FluentButton>
    </FluentCard>
</FluentLayout>

@code {

    private void StartNow()
    {
        Navigation.NavigateTo("/calculator");
    }

    private void LearnMore()
    {
        Navigation.NavigateTo("/about");
    }

}